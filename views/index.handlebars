<div class="container">
  <div class="row">
    <div class="col-md-6 text-center" id="top-bar">
      <src="assets/img/burger.png"/>
      <h1> If you like this, you have a problem! </h1>
    </div>
    <div class="col-md-2" class="task">
      <div class="row">
            <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
          	<div class="col-md-9 text-center">
					  <pre>{{this.id}}. {{this.burger_name}}
					  </pre>
				</div>
				<div class="col-md-12 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				  {{/unless}}
  	    <li>
  	      <p>ID: {{this.id}}</p>
          <p>Burger: {{this.burger_name}}</p>
          <p>Devoured: {{this.devoured}}</p>
          <p>Toppings: {{this.toppings}}</p>
          <p>Price: {{this.price}}</p>
  	    </li>
      {{/each}}
    </ul>at
      </div>
    </div>
  </div>

</div>





